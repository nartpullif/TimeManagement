<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.timemanagement.activities.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_previousDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_currentDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Main Date"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_nextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&gt;"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.94"
        android:padding="15dp">


    </android.support.v7.widget.RecyclerView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addTask"
        android:layout_gravity="center"
        android:text="+"
        android:textSize="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_day_all"
                android:text="Finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Finished"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"/>

        <LinearLayout  android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="8"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="end"
                android:textAlignment="viewEnd"/>

            <TextView
                android:text="Target"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="end"
                android:textAlignment="viewEnd" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>
